//- partial for each word in 'list' view

div.spanish
  span.label spanish
  span= word.word_es || '[missing]'

div.english
  span.label english      
  span= word.word_en || '[missing]'

div.type
  span.label type
  span!= word.getType()

- if (typeof showWordLinks != 'undefined' && showWordLinks == true)
  div.links
    a.perma(href='/word/#{word._id}') link
    a.edit(href='/word/#{word._id}/edit') edit
    a.delete(href='/word/#{word._id}/delete') delete
